<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF5534"
        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="10">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="35dp"
            android:layout_height="68dp"
            android:layout_weight="1.73"
            android:src="@drawable/trash" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Delete Item?"
            android:textColor="#fff"
            android:textSize="17sp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:padding="10dp"
        swipe:cardBackgroundColor="@color/white"
        swipe:cardCornerRadius="4dp"
        swipe:cardElevation="4dp"
        swipe:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="93dp"
            android:layout_height="85dp"
            android:layout_gravity="end|center"
            android:layout_margin="8dp"
            android:gravity="end">


            <TextView
                android:id="@+id/precio"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:layout_gravity="center|center_vertical"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:layout_weight="5.95"
                android:height="25dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="168dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:layout_weight="4.79"
            android:padding="5dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/table"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="0dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="bottom|top"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/mesa"
            android:layout_width="82dp"
            android:src="@drawable/mesa1"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_gravity="left|center"
            android:textAlignment="center" />

        <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.75"
                        android:orientation="horizontal"
                        android:weightSum="1">


                    </LinearLayout>


                </LinearLayout>





        -->
    </android.support.v7.widget.CardView>


</com.daimajia.swipe.SwipeLayout>